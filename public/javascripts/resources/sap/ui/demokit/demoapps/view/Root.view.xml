<mvc:View
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		controllerName="sap.ui.demokit.demoapps.controller.Root"
		displayBlock="true">
	<App>
		<Page showHeader="false" enableScrolling="false">
				<TileContainer
						id="tileContainer"
						tiles="{/allApps}">
					<StandardTile
							icon="sap-icon://{icon}"
							number="{lib}"
							title="{name}"
							info="{desc}"
							type="{type}"
							press="onTilePress">
						<customData>
							<core:CustomData key="ref" value="{ref}"/>
						</customData>
					</StandardTile>
				</TileContainer>
		</Page>
		<dependents>
			<SelectDialog id="downloadDialog"
						  items="{/allApps}"
						  title="Downloads"
						  liveChange="onLiveChange"
						  confirm="onDownloadPress">
				<StandardListItem
						visible="{= !!${config}}"
						title="{name}"
						type="Active"
						icon="sap-icon://{icon}">
					<customData>
						<core:CustomData key="config" value="{config}"/>
					</customData>
				</StandardListItem>
			</SelectDialog>
		</dependents>
	</App>
</mvc:View>
